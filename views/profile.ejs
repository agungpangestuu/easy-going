<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>
    </title>
  </head>
  <body>
    <h1>Welcome <%=profile.email%></h1>
    <%if(profile.role == 'Penjual'){%>
      <h3><a href="/users/<%=profile.id%>/addCarTobiding">Add Car</a></h3>
    <%}%>
    <%if(profile.role == 'Renter'){%>
      <h3><a href="/users/<%=profile.id%>/bid">Bid!</a></h3>
    <%}%>
    <div>
      <h2>Item Bid list</h2>
      <table>
        <tr>
          <th>ID</th>
          <th>Name of Car</th>
          <th>Last Bids</th>
          <th>Time</th>
        </tr>
        <tr><%dataBiddings.forEach(bids=>{%>
          <%if(bids.status){%>
            <th><%=bids.id%></th>
            <th><%=bids.MobilId%></th>
            <th><%=bids.bid%></th>
            <th><%=bids.createdAt%></th>
            <th><%=bids.status%></th>
          <%}%>
          </tr>
          
          
        <%})%>
      </table>
    </div>
    <div>
      <h2>Item Bid History</h2>
      <table>
        <tr>
          <th>ID</th>
          <th>Name of Car</th>
          <th>Last Bids</th>
          <th>Time</th>
        </tr>
        <tr><%dataBiddings.forEach(bids=>{%>
          <%if(!bids.status){%>
            <th><%=bids.id%></th>
            <th><%=bids.MobilId%></th>
            <th><%=bids.bid%></th>
            <th><%=bids.createdAt%></th>
          <%}%>
        </tr>
        <%})%>
      </table>
    </div>
  </body>
</html>